<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coe528.project.login.CreateCustomerController">
   <children>
      <Label fx:id="welcomeText" text="Account Creation Window" />
      <Label fx:id="taskMessage" textFill="#eb0909" />
      <TextField fx:id="customerPassword" promptText="Enter customer password" />
      <Button fx:id="createButton" mnemonicParsing="false" onAction="#createPassword" text="create account" />
      <Button fx:id="backButton" mnemonicParsing="false" onAction="#backToSecondary" text="back" />
      <Button fx:id="secondaryButton" onAction="#switchToPrimary" text="logout" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
