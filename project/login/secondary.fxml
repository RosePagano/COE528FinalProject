<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coe528.project.login.SecondaryController">
    <children>
        <Label fx:id="welcomeText" text="Hello" />
      <Label fx:id="taskMessage" text="Enter customer username to add or delete account." textFill="#eb0909" />
      <TextField fx:id="customerUsername" promptText="Enter customer username" />
      <Button mnemonicParsing="false" onAction="#addCustomer" text="add customer" />
      <Button mnemonicParsing="false" onAction="#delete" text="delete customer" />
        <Button fx:id="secondaryButton" onAction="#switchToPrimary" text="logout" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
